(executable
 (name frontend)
 ; (public_name frontend)
 (libraries js_of_ocaml brr
    raytracer util_js)
 (preprocess
  (pps js_of_ocaml-ppx))
 (modes js)
 ; (package blog_frontend)
)

(rule
    (targets index.html)
    (deps main.html)
    (action (run cp %{deps} %{targets})))

(rule
    (targets main.js)
    (deps frontend.bc.js)
    (action (run cp %{deps} %{targets})))

(alias
    (name default)
    (deps main.js index.html))
